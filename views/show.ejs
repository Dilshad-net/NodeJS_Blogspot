<body>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="card-title md-3">
                    <h2> <%= base.title %> </h2>
                    <div class="card-subtitle mb-3 text-muted">
                        <%= base.createdDate.toLocaleDateString() %>
                    </div>
                    <a href="/" class="btn btn-primary">View All Articles</a>
                    <a href="#" class="btn btn-info">Edit</a>
                </div>
                <div class="card-text">
                    <%- base.Sanitizer %>
                </div>
            </div>
        </div>
    </div>
    

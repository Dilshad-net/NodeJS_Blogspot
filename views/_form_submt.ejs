<div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" class="form-control" value="<%= base.title %>" required>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" required><%= base.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Mark down</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= base.markdown %></textarea>
</div>
<button type="submit" class="btn btn-primary">Save</button>
<a href="/" class="btn btn-secondary">Cancel</a>